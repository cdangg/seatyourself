<%= @restaurant[:name] %>
<%= link_to "Edit Restaurant", edit_restaurant_path%>
<% if current_customer %>
<div class="reservation">
		<h3>Reservations</h3>
		<%= form_for([@restaurant, @reservation]) do |f| %>
			<div class="field">
				<%= f.label "When?" %><br />
				<%= f.datetime_select :day, order: [:month, :day] %>
			</div>

			<div class="field">
				<%= f.label "Number of Guests" %><br />
				<%= f.number_field :num_of_customers %>
			</div>
			<div class="actions">
				<%= f.submit %>
			</div>
		<% end %>
<% end %>

<div>
	<section>
		<%= @restaurant[:address] %><br />
		<%= @restaurant[:category] %><br />
		<%= @restaurant[:summary] %><br />
	</section>
</div>

